    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Basic Test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/a.out",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true,
                }
            ]
        },
        {
            "name": "Python debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "/bin/python3",
            "args": [
                "${input:Script}"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/test",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true,
                }
            ]
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "Script",
            "description": "Which script do you want to run?",
            "default": "test_lib/test.py"
        }
        {
            "name": "Python debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "/bin/python3",
            "args": [
                "${input:Script}"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/test",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true,
                }
            ]
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "Script",
            "description": "Which script do you want to run?",
            "default": "test_lib/test.py"
        }
    ]
